@model Recipes.ViewModels.AdminCreateRoleViewModel
@{
    ViewBag.Title = "Create New Role";
}
<div class="row">
    <form method="post">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger m-3"></div>
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control m-3" asp-for="RoleName" placeholder="Role Name" />
        </div>
        <button type="submit" class="btn btn-primary border-0 m-3">Create Role</button>
    </form>
</div>