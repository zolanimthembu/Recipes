@model List<Recipe>
@{
    ViewBag.Title = "Recipe List";
}
@{int count = 0;}
<a asp-action="AddNewRecipe" asp-controller="Recipes" class="btn btn-primary m-3">Add New Recipe</a>
@if(Model.Count() >0){
<div class="text-center">
    <form method="post" action="Delete">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Recipe Image</th>
                <th scope="col">Recipe Name</th>
                <th scope="col">Date Added</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach (Recipe recipe in Model)
                {
                    ++count;
                    <tr>
                    <td scope="row">@count</td>
                    <td scope="row">
                            <img src="~/images/@recipe.Image"
                             class="rounded-circle"
                             height="40" width="40"
                             asp-append-version="true" />
                    </td>
                    <td>
                        @recipe.RecipeName
                        </td>
                    <td>@recipe.DateAdded.ToShortDateString()</td>
                    <td><a asp-action="EditRecipe" asp-controller="Recipes" asp-route-recipeID="@recipe.RecipeID" class="btn btn-primary">Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="RemoveRecipe" asp-controller="Recipes" asp-route-recipeID="@recipe.RecipeID" >Delete</a></td>
                    </tr>
                }
        </tbody>
    </table>
    </form>
</div>
}
