@model Recipes.ViewModels.UserloginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="row">
    <form method="post">
            <div asp-validation-summary="All" class="text-danger m-3"></div>
            <input type="text" class="form-control m-3" asp-for="Email" placeholder="Email" />

            <input class="form-control m-3" asp-for="Password" placeholder="Passowrd" />
                
        <button type="submit" class="btn btn-primary border-0 m-3">Login</button>
        <br />
        <input asp-for="RememberMe" class="m-3"/>
        @Html.DisplayNameFor(m=>m.RememberMe)
    </form>
</div>